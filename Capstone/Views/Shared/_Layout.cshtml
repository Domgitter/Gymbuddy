<!DOCTYPE HTML>

<html>
<head>
    <title>@ViewBag.Title - Gymbuddy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />

    <!--script src="~/Scripts/html5shiv.js"></!--script-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/js/skel.min.js"></script>
    <script src="~/js/skel-panels.min.js"></script>
    <script src="~/js/init.js"></script>



    <link href="~/CSS/skel-noscript.css" rel="stylesheet" />
    <link href="~/CSS/style.css" rel="stylesheet" />
    <link href="~/CSS/style-desktop.css" rel="stylesheet" />

    <!--link href="~/Content/style-1000px.css" rel="stylesheet" /-->
    <!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->
    <!--[if lte IE 9]><link rel="stylesheet" href="css/ie/v9.css" /><![endif]-->
</head>
<body class="no-sidebar">

    <!-- Header -->
    <div id="header">
        <div >

            <!-- Logo -->
            <div id="logo">

                <h1><a href="#">Gym Buddy</a></h1>
                <span>Find a Gym Partner</span>
            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </nav>
        </div>
    </div>

    <!-- Main -->
    @RenderBody()
    <!-- Footer -->
    <div id="featured">
        <div class="container">
            <div class="row">
                <div class="4u">
                    <h2>Users Near You</h2>
                    <a href="@Url.Action("Index","GymUsers")" class="image full"><img src="~/Images/Partners.jpg" alt="" style="width:400px;height:250px" /></a>
                    <p>Find Gymbuddys in Your Area</p>
                    <p><a href="@Url.Action("Index","GymUsers")" class="button">Find</a></p>
                </div>
                <div class="4u">
                    <h2>Discover Places</h2>
                    <a href="@Url.Action("Index","GymOrPlaces")" class="image full"><img src="~/Images/Places.jpg" alt="" style="width:400px;height:250px" /></a>
                    <p>Discover places to connect with gym partners</p>
                    <p><a href="@Url.Action("Index","GymOrPlaces")" class="button">Discover</a></p>
                </div>
                <div class="4u">
                    <h2>Activities</h2>
                    <a href="@Url.Action("Create","UserExerciseTypes")" class="image full"><img src="~/Images/Activities.jpg" alt="" style="width:400px;height:250px" /></a>
                    <p>Discover activites around your area</p>
                    <p><a href="@Url.Action("Create","UserExerciseTypes")" class="button">Discover</a></p>
                </div>
            </div>
        </div>
    </div>


    <!-- Footer -->
    <div id="footer">
        <div class="container">
            <div class="row">
                <div class="4u">
                    <section>
                        <h2>Latest Posts</h2>
                        <ul class="default">
                            <li><a href="#">How to do the perfect squad</a></li>
                            <li><a href="#">How to Prepare for a 12k</a></li>
                            <li><a href="#">From Couch to 5k</a></li>
                            <li><a href="#">Why You're Doing it Wrong</a></li>
                            <li><a href="#">How to Stay Motivated</a></li>
                        </ul>
                    </section>
                </div>
                <div class="4u">
                    <section>
                        <h2>Get to know the Members</h2>
                        <ul class="default">
                            <li><a href="#">He lost 50lbs in 3 months</a></li>
                            <li><a href="#">This Member is Changing how to Workout</a></li>
                            <li><a href="#">How to Greet</a></li>
                            
                        </ul>
                    </section>
                </div>
                <div class="4u">
                    <section>
                        <h2>Best Places to Workout</h2>
                        <ul class="default">
                            <li><a href="#">Doing Planks in Bermuda</a></li>
                            <li><a href="#">Mariana Hiking Trail</a></li>
                            
                        </ul>
                    </section>
                </div>
            </div>
        </div>
    </div>

    <!-- Copyright -->
    <div id="copyright">
        <div class="container">
            
        </div>
    </div>


    
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)

    
</body>

</html>